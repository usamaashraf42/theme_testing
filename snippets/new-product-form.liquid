<script>
    let allPdpOptions = document.querySelectorAll('.pdp-product-form-option')
    let allPdpRadios = document.querySelectorAll('.pdp-product-form-option-radio-button')
    let allPdpCtaForms = document.querySelectorAll('.pdp-cta-form-container')

    for (let i = 0; i < allPdpOptions.length; i++) {
        allPdpOptions[i].addEventListener('click', () => {

            // Select radio btn
            allPdpRadios.forEach(function(element){element.classList.add('filled-radio-button')})
            allPdpRadios[i].classList.toggle('filled-radio-button')

            // Show proper add to cart CTA/Form
            allPdpCtaForms.forEach(function(element){element.classList.remove('show-product-form')})
            allPdpCtaForms[i].classList.toggle('show-product-form')
        })
    }
</script>

