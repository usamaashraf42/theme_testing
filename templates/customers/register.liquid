{% assign page_handle = canonical_url|split : "dirteaworld.com" %}

<div class="page-width">
  <header class="section-header text-center">
    <h1 class="section-header__title">Sign in / Create Account</h1>
  </header>
  <div class="dirtea-page-menu">
    <ul>
        {% for link in linklists.sign-in-create-account-menu.links %}
        <li {% if page_handle[1] == link.url %}class="active"{% endif %}><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
    </ul>
  </div>
</div>


<div class="page-width dirtea-login-page" id="dirteaCreateAccountForm">
    <h3 class="text-center">{{ 'customer.register.title' | t }}</h3>
    {% form 'create_customer' %}
        {{ form.errors | default_errors }}

        <div class="dirtea-form-horizontal-group">
            <label for="FirstName" class="label--hidden">{{ 'customer.register.first_name' | t }}</label>
            <input class="login-form-input" type="text" name="customer[first_name]" id="FirstName" placeholder="{{ 'customer.register.first_name' | t }}" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} autocapitalize="words" autofocus>

            <label for="LastName" class="label--hidden">{{ 'customer.register.last_name' | t }}</label>
            <input class="login-form-input" type="text" name="customer[last_name]" id="LastName" placeholder="{{ 'customer.register.last_name' | t }}" {% if form.last_name %}value="{{ form.last_name }}"{% endif %} autocapitalize="words">
        </div>

        <label for="Email" class="label--hidden">{{ 'customer.register.email' | t }}</label>
        <input type="email" name="customer[email]" id="Email" class="login-form-input {% if form.errors contains 'email' %} input--error{% endif %}" placeholder="{{ 'customer.register.email' | t }}" {% if form.email %} value="{{ form.email }}"{% endif %} autocorrect="off" autocapitalize="off">

        <label for="CreatePassword" class="label--hidden">{{ 'customer.register.password' | t }}</label>
        <input type="password" name="customer[password]" id="CreatePassword" class="login-form-input {% if form.errors contains 'password' %} input--error{% endif %}" placeholder="{{ 'customer.register.password' | t }}">

        <p class="customer-login__links text-center">
            <input type="submit" class="btn bg-off-black color-white border-none" value="{{ 'customer.register.submit' | t }}">
            <span>Returning customer? <a href="{{ routes.account_login_url }}" class="login-unstyled-links">Sign in here</a></span>
        </p>




    {% endform %}
</div>


{% comment %}
