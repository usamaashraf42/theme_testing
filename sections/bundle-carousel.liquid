        color: transparent;
        transform: rotate(180deg);
        border: 1px solid  #012169;
        border-radius: 50px;
        height: 50px;
        width: 50px;
        right: 15px;
        display: none;
    }

    @media (min-width: 769px) {
        .swiper-button-next {display: flex}
        .swiper-button-prev {display: flex}
    }

    .swiper-scrollbar {
        height: 1px !important;
    }

    .bundle-carousel-title {
        color: #012169;
        font-size: 24px;
        letter-spacing: 1px;
        line-height: 46px;
        text-align: center; 
        margin-bottom: 60px;
    }

    @media(min-width: 769px) {
        .bundle-carousel-title {
            font-size: 32px;
            letter-spacing: 1px;
            line-height: 46px;
        }
    }
{% endstyle %}

{% javascript %}
        var swiper = new Swiper(".mySwiper", {
        slidesPerView: 1,
        spaceBetween: 10,
        breakpoints: {
            769: {
                slidesPerView: 3
            }
        },
        navigation: {
          nextEl: ".swiper-button-next",
          prevEl: ".swiper-button-prev"
        },
        scrollbar: {
          el: ".swiper-scrollbar",
          hide: false
        }
      });
{% endjavascript %}