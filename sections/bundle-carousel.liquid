    <!-- Link Swiper's CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css"/>

    {% comment %} Swiper HTML {% endcomment %}
    <div class="bundle-carousel-section-container">
        {% comment %}<div class="bundle-carousel-title">{{ section.settings.title }}</div>{% endcomment %}
        <div class="swiper mySwiper">
          <div class="swiper-wrapper">
            {% render 'fake-bundle-card' with thirdProduct: true %}
            {% for product in section.settings.selected_collection.products  %}
              {% render 'product-carousel-card' with product: product, productNumber: forloop.index %}
            {% endfor %}
          </div>
          <!-- <div class="swiper-scrollbar"></div> -->
        </div>
        <div class="swiper-buttons-container">
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
    </div>

    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>


{% schema %}
  {
    "name": "Bundle Carousel",
    "settings": [
        {
        "type": "text",
        "id": "title",
        "label": "Carousel Title",
        "default": "Black Friday DEALS"
        },
        {
        "type": "collection",
        "id": "selected_collection",
        "label": "Select Collection"
      }
    ]
  }
{% endschema %}

{% style %}

    .mySwiper {
      overflow: visible
    }

    .bundle-carousel-section-container {
        background-color: #FFFEF2;
        padding-top: 75px;
        padding-bottom: 50px;
    }

    .swiper-buttons-container {
        position: absolute;
        width: 100%;
        height: 550px;
        margin-top: -550px;
    }

    .swiper {
    width: 85%;
    }

    .swiper-slide {
    text-align: center;
    font-size: 18px;
    background: #fff;

    /* Center slide text vertically */
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
    }

    .swiper-slide img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    }

