        background-repeat: no-repeat;
        background-position: center center;
        color: transparent;
        border: 1px solid  #012169;
        border-radius: 50px;
        height: 50px;
        width: 50px;
        left: 15px;
        display: none;
    }

    .swiper-button-next {
        background-image: url("data:image/svg+xml,%3Csvg width='36' height='35' viewBox='0 0 36 35' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cg clip-path='url(%23clipLeftLarge)'%3E%3Cpath fill-rule='evenodd' clip-rule='evenodd' d='M31.6141 17.486C31.6141 17.7621 31.3902 17.986 31.1141 17.986L4.88594 17.986C4.6098 17.986 4.38594 17.7621 4.38594 17.486C4.38594 17.2098 4.6098 16.986 4.88594 16.986L31.1141 16.986C31.3902 16.986 31.6141 17.2098 31.6141 17.486Z' fill='black'%3E%3C/path%3E%3Cpath fill-rule='evenodd' clip-rule='evenodd' d='M13.982 8.38969C14.1772 8.58495 14.1772 8.90153 13.982 9.09679L5.59282 17.4859L13.982 25.8751C14.1772 26.0704 14.1772 26.3869 13.982 26.5822C13.7867 26.7775 13.4701 26.7775 13.2749 26.5822L4.53216 17.8395C4.3369 17.6442 4.3369 17.3276 4.53216 17.1324L13.2749 8.38969C13.4701 8.19442 13.7867 8.19442 13.982 8.38969Z' fill='black'%3E%3C/path%3E%3C/g%3E%3Cdefs%3E%3CclipPath id='clipLeftLarge'%3E%3Crect width='24.7281' height='24.7281' fill='white' transform='translate(18 0.000488281) rotate(45)'%3E%3C/rect%3E%3C/clipPath%3E%3C/defs%3E%3C/svg%3E");
