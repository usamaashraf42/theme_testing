<!-- Amazon section starts -->
<section class="amazon_like amazon__update">

  <div class="page-width">
    <div class="leftContent_amazon">
      <div class="col-md-6 hide-on-mobile">
        <div class="big-module">
          <div class="child-image" style="background-image:url('{{ section.settings.image1 | img_url:'master' }}')">
          </div>

          <h2>{{ section.settings.main_title1 }}</h2>
          <!-- <div class="sub">{{ section.settings.sub_title1 }}</div><br/> -->
          <a class="button-amazon" href="{{ section.settings.view-btn-link1 }}">{{ section.settings.view-btn1 }}</a>
        </div>
      </div>

      <div class="col-md-6 show-on-mobile">
        <div class="big-module" style="background-image:url('{{ section.settings.image1_mob | img_url:'master' }}')">
          <div class='module__mobile_container'>
            <h2>{{ section.settings.main_title1 }}</h2>
            <!-- <div class="sub">{{ section.settings.sub_title1 }}</div> -->
          </div>
          <a class="button-amazon" href="{{ section.settings.view-btn-link1 }}">{{ section.settings.view-btn1 }}</a>
        </div>

      </div>




      <div class="col-md-6 hide-on-mobile">
        <div class="big-module">
          <div class="child-image" style="background-image:url('{{ section.settings.image_2 | img_url:'master' }}')">
          </div>

          <h2>{{ section.settings.main_title_2 }}</h2>
          <!-- <div class="sub">{{ section.settings.sub_title1 }}</div><br/> -->
          {% if section.settings.hide-coming-soon and section.settings.view-btn-link_2 == ''%}
          <a class="button-amazon" href="{{ section.settings.view-btn-link_2 }}">{{ section.settings.view-btn_2 }}</a>
          {% else %}
          <a class="button-amazon" href="javascript:void(0)">{{ section.settings.view-btn_2 }}</a>
          {% endif %}
        </div>
      </div>

      <div class="col-md-6 show-on-mobile">
        <div class="big-module" style="background-image:url('{{ section.settings.image_2_mob | img_url:'master' }}')">
          <div class='module__mobile_container'>
            <h2>{{ section.settings.main_title_2 }}</h2>
            <!-- <div class="sub">{{ section.settings.sub_title1 }}</div> -->
          </div>
          <a class="button-amazon" href="{{ section.settings.view-btn-link_2 }}">{{ section.settings.view-btn_2 }}</a>
        </div>

      </div>
    </div>



    <div class="col-md-6">

      <div class="small-module">
        <div class="child-image" style="background-image:url('{{ section.settings.image2 | img_url:'master' }}')"></div>
        <h2>{{ section.settings.main_title2 }}</h2>
        <a class="button-amazon" href="{{ section.settings.view-btn-link2 }}">{{ section.settings.view-btn2 }}</a>
      </div>

      <div class="small-module">
        <div class="child-image" style="background-image:url('{{ section.settings.image3 | img_url:'master' }}')"></div>
        <h2>{{ section.settings.main_title3 }}</h2>
        <a class="button-amazon" href="{{ section.settings.view-btn-link3 }}">{{ section.settings.view-btn3 }}</a>
      </div>

      <div class="small-module">
        <div class="child-image" style="background-image:url('{{ section.settings.image4 | img_url:'master' }}')"></div>
        <h2>{{ section.settings.main_title4 }}</h2>
        <a class="button-amazon" href="{{ section.settings.view-btn-link4 }}">{{ section.settings.view-btn4 }}</a>
      </div>

      <div class="small-module">
        <div class="child-image" style="background-image:url('{{ section.settings.image5 | img_url:'master' }}')"></div>
        <h2>{{ section.settings.main_title5 }}</h2>
        <a class="button-amazon" href="{{ section.settings.view-btn-link5 }}">{{ section.settings.view-btn5 }}</a>
      </div>
      {% if section.settings.mobile_title6 != '' %}
      <div class="small-module show-on-mobile"
        style="background-image:url('{{ section.settings.image6 | img_url:'master' }}')">
        <h2>{{ section.settings.mobile_title6 }}</h2>
        <a class="button-amazon" href="{{ section.settings.view-btn-link6 }}">{{ section.settings.view-btn6 }}</a>
      </div>
      {% endif %}
    </div>

  </div>

</section>
<!-- Amazon section ends -->

{% if section.settings.hide-coming-soon %}

<style>
  .amazon_like.amazon__update .leftContent_amazon .col-md-6:nth-child(3) .big-module .child-image::after,
  .amazon_like.amazon__update .leftContent_amazon .col-md-6:nth-child(4) .big-module::after {
    content: '';
    position: absolute;
    width: 100%;
    left: 0;
    top: 0;
    height: 100%;
    background-color: hsla(222, 98%, 21%, 0.98);
  }

  .amazon_like.amazon__update .leftContent_amazon .col-md-6:nth-child(3) h2,
  .amazon_like.amazon__update .leftContent_amazon .col-md-6:nth-child(4) h2 {
    display: none;
  }

</style>

{% endif %}

