{% for block in section.blocks %}
{% if block.settings.image != blank %}
  <style>
    .hero--{{ block.id }} {
      background-position: {{ block.settings.alignment }};
    }
  </style>
{% endif %}
{% endfor %}

{% if section.settings.show_overlay %}
{% for block in section.blocks %}
  <style>
    .hero--{{ block.id }}.hero__overlay::before {
      background: linear-gradient(237.4deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 100%);
    }

    .hero--{{ block.id }} .hero__overlay-title--overlay,
    .hero--{{ block.id }} .mega-subtitle {
      color: {{ section.settings.overlay_text }};
    }
    @media only screen and (max-width: 749px){
      .hero--{{ block.id }}.hero__overlay::before {
        background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.5) 100%), linear-gradient(0deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.5) 100%);
      }
    }
  </style>
{% endfor %}
{% endif %}

<div class="slideshow-outer">
  <div class="Slideshowsmall {% if section.blocks.size > 1 %}Slideshowsmall-block{% endif %}">
    {% for block in section.blocks %}
    <div class="slide-item">
      {% include 'slide' %}
    </div>
    {% endfor %}
  </div>
  <div class="slide-over {% if section.blocks.size > 1 %}slide-over1 {% endif %} Slideshowsmall {% if section.settings.show_overlay %} hero__overlay{% endif %}">
  {% for block in section.blocks %}
  <div class="hero--{{ block.id }}">
    <div class="page-width text-center">
      <div class="page-width page-width-small inner-container-{{ block.settings.position }}">
        <div class="content1">
          {% if block.settings.smalltitle != blank %}
          <div class="hero__overlay-title subtitle separator{% if section.settings.show_overlay %} hero__overlay-title--overlay{% endif %} h6" data-animate>{{ block.settings.smalltitle | escape }}</div>
          {% endif %}
          {% if block.settings.title != blank %}
          <h2 class=" hero__overlay-title separator{% if section.settings.show_overlay %} hero__overlay-title--overlay{% endif %} slideTitle" data-animate>{{ block.settings.title | escape }}</h2>
          {% endif %}
        </div>
        <div class="content2">
          {% if block.settings.text != blank %}
          <div class="rte-setting mega-subtitle{% if section.settings.text_size == 'large' %} mega-subtitle--large{% endif %}">{{ block.settings.text }}</div>
          {% endif %}
          {% if block.settings.button_label != blank %}
          <a href="{{ block.settings.button_link }}" class="btn{% if block.settings.use_second_button %} btn--secondary{% endif %} hero__btn">
            {{ block.settings.button_label }}
          </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  {% endfor %}
  </div>
</div>
