<div class="black-friday-hero-container">
    <div class="black-friday-hero-inner-container">
        <div style="padding-top: 35px; margin-bottom: 25px;">{% render 'black-friday-hero-ticker' with textVersion: 1, main_colour: section.settings.main_color %}</div>
        <div class="black-friday-hero-text-container" {% if section.settings.main_color %}style="color: {{ section.settings.main_color}}"{% endif %}>
            <div>{{ section.settings.first_sentence }}</div>
            <div style="font-size: 30px; line-height: 50px; margin-top: -5px; min-width: 246px;">IS {% render 'black-line' with fill_colour: section.settings.main_color%} HERE</div>
            <div>{{ section.settings.second_sentence }}</div>
        </div>
    </div>
    <img class="black-friday-hero-image--desktop lazyload" src="https://cdn.shopify.com/s/files/1/0502/4782/7656/files/Dirtea17797_2-fin_sRGB_2x_834c1cde-8580-4068-80a7-d228137695ba.png?v=1668516182"/>
    <img class="black-friday-hero-image--mobile lazyload" src="https://cdn.shopify.com/s/files/1/0502/4782/7656/files/Dirtea17797_2-fin_sRGB_2x_b32dfc96-2d12-495c-b8a8-6501c941381b.png?v=1668530594"/>
</div>

{% style %}

.black-friday-hero-container {
    background: #FFFEF2;
}

.black-friday-hero-inner-container {
    position: absolute;
}

@media (max-width: 1020px) {
    svg {
        width: 100px !important
    }
}

.black-friday-hero-image--desktop {
    display: none
}

.black-friday-hero-image--mobile {
    display: block
}

@media (min-width: 769px) {
    .black-friday-hero-image--desktop {
        display: block
    }
    
    .black-friday-hero-image--mobile {
        display: none
    }
}

.black-friday-hero-text-container {
    color: #000000;
    font-family: "Manifold";
    font-weight: 500;
    letter-spacing: 2.8px;
    font-size: 80px;
    line-height: 65px;
    text-align: left;
    padding-right: 35vw;
}

@media(max-width: 769px) {
    .black-friday-hero-text-container {
        margin: auto;
        max-width: 85%;
        line-height: 100px;
        font-size: 100px;
    }
}

@media (min-width: 900px) {
    .black-friday-hero-text-container {
        padding-left: calc(36vw + 25px);
        font-size: 60px;
        line-height: 55px;
    }
}

@media (min-width: 1100px) {
    .black-friday-hero-text-container {
        padding-left: calc(35vw + 25px);
        font-size: 105px;
        line-height: 100px;
    }
}

@media (min-width: 1300px) {
    .black-friday-hero-text-container {
        padding-left: calc(35vw + 25px);
    }
}

@media (min-width: 1500px) {
    .black-friday-hero-text-container {
        padding-left: calc(37vw + 25px);
    }
}

{% endstyle %}

{% schema %}
{
    "name": "Black Friday Hero Home",
    "settings": [
        {
            "type": "text",
            "id": "first_sentence",
            "label": "First Sentence",
            "default": "BLACK FRIDAY"
        },
        {
            "type": "text",
            "id": "second_sentence",
            "label": "Second Sentence",
            "default": "EARLY"
        },
        {
            "type": "color",
            "id": "main_color",
            "label": "Colour"
        }
    ],
    "presets": [
    {
        "name": "Black Friday Hero Home",
        "category": "Black Friday"
    }]
}
{% endschema %}