<div class="page-width">
  <div class="featured-collection__heading grid text-center">
    <div class="grid__item medium-up--ten-twelfths medium-up--push-one-twelfth">      
      <h5>{{ section.settings.subtitle }}</h5>      
      <h2>{{ section.settings.title }}</h2>      
    </div>
  </div>
  {% if section.blocks.size <= 3 %}
  <div class="grid">
    {% for block in section.blocks %}
    <div class="grid__item medium-up--one-third text-center">
      {% if block.settings.image == blank %}
      {{ 'logo' | placeholder_svg_tag }}
      {% else %}
      <img src="{{ block.settings.image | img_url: '300x300' }}"/>
      {% endif %}
    </div>
    {% endfor %}
  </div>
  {% elsif section.blocks.size > 3 %}
  <div class="stockistSlider">
    {% for block in section.blocks %}
    <div class="stockistSlider-slide-item text-center">
      {% if block.settings.image == blank %}
      {{ 'logo' | placeholder_svg_tag }}
      {% else %}
      <img src="{{ block.settings.image | img_url: '300x300' }}"/>
      {% endif %}
    </div>
    {% endfor %}
  </div>
  {% endif %}
  {% if section.settings.link != blank %}
  <div class="text-center btn-container"><a href="{{ section.settings.link }}" class="btn--secondary" ><span class="btn-underline">{{ section.settings.link_label }}</span></a></div>
  {% endif %}
</div>
{% schema %}
  {
    "name": "Dirtea stockists",
    "settings": [
      {
      "type" : "text",
      "id" : "subtitle",
      "label" : "Sub Title"
      },
      {
      "type" : "text",
      "id" : "title",
      "label" : "Title"
      },
      {
      "type" : "url",
      "id" : "link",
      "label" : "Link"
      },
      {
      "type" : "text",
      "id" : "link_label",
      "label" : "Link Label"
      }
],
"blocks" : [
{
"type" : "stockist",
"name" : "Stockist",
"settings"  : [
    {
    "type" : "image_picker",
    "id" : "image",
    "label" : "Image"
    }
]
}
],
"presets" : [
{
"name" : "Stockist List",
"category" : "Image"
}
]
  }
{% endschema %}

