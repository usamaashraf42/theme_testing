<div class="feature-row spacepbetween">
  <div class="feature-row__item-four feature-row__text-four small--hide">
    <div class="feature-Slidespacepbetween">
      <div class="feature-Slide-items text-center">
        {% if section.settings.smalltitle != blank %}
        <h4 class="feature-row__heading subhead " data-animate>{{ section.settings.smalltitle | escape }}</h4>
        {% endif %}
        {% if section.settings.title != blank %}
        <h2 class="feature-row__heading" data-animate>{{ section.settings.title | escape }}</h2>
        {% endif %}
        {% if section.settings.text != blank %}
        <div class="rte-setting featured-row__subtext">{{ section.settings.text }}</div>
        {% endif %}
        {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="btn{% if section.settings.use_second_button %} btn--secondary{% endif %} feature-row__btn">
          {{ section.settings.button_label }}
        </a>
        {% endif %}
      </div>
    </div>
  </div>
  <div class="feature-row__item-six feature-row__image-wrapper-six">
    <div class="page-width medium-up--hide text-center">
      {% if section.settings.smalltitle != blank %}
      <h4 class="feature-row__heading subhead " data-animate>{{ section.settings.smalltitle | escape }}</h4>
      {% endif %}
      {% if section.settings.title != blank %}
      <h2 class="feature-row__heading" data-animate>{{ section.settings.title | escape }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
      <div class="rte-setting featured-row__subtext">{{ section.settings.text }}</div>
      {% endif %}
    </div>
    <div class="feature-recipes">
      {% for block in section.blocks %}
      <div class="recipes-item four-tenths small--nine-tenths">
        {% if block.settings.image == blank %}
        {{ 'image' | placeholder_svg_tag }}
        {% else %}
        <div class="image-coll">
          <a href="{% if  block.settings.link != blank %}{{ block.settings.link }}{% else %}#{% endif %}" >
          <img class="one-whole" src="{{ block.settings.image | img_url : '1024x' }}"/>
          </a>
        </div>
        <div class="image-btm">
          <h6>{{ block.settings.block_titl }}</h6>
          <p>{{ block.settings.block_price }}</p>
        </div>
        
        {% endif %}
      </div>
      {% endfor %}
    </div>
    <div class="page-width medium-up--hide btn-container text-center">
      {% if section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link }}" class="btn{% if section.settings.use_second_button %} btn--secondary{% endif %} feature-row__btn">
        {{ section.settings.button_label }}
      </a>
      {% endif %}
    </div>
  </div>
</div>
